{
  "$id": "https://noro/pia/context_event.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ContextEvent",
  "type": "object",
  "additionalProperties": false,
  "required": ["correlation_id", "user_id", "ts", "event", "active_app", "tabs", "signals", "privacy"],
  "properties": {
    "correlation_id": { "type": "string", "minLength": 2 },
    "user_id":        { "type": "string", "minLength": 1 },
    "ts":             { "type": "string", "format": "date-time" },
    "event":          { "type": "string", "enum": ["manual_capture", "interrupt_detected", "periodic"] },
    "active_app":     { "type": "string" },
    "tabs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "url_hash"],
        "properties": {
          "title":          { "type": "string" },
          "url_hash":       { "type": "string" },
          "text_sample":    { "type": "string" },
          "cursor_context": { "type": "string" }
        }
      }
    },
    "signals": {
      "type": "object",
      "additionalProperties": false,
      "required": ["idle_sec", "calendar_busy", "slack_ping"],
      "properties": {
        "idle_sec":      { "type": "integer", "minimum": 0 },
        "calendar_busy": { "type": "boolean" },
        "slack_ping":    { "type": "boolean" }
      }
    },
    "privacy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["redacted", "allowlist"],
      "properties": {
        "redacted":  { "type": "boolean" },
        "allowlist": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}