{
  "$id": "https://noro/pia/session_summary.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SessionSummary",
  "type": "object",
  "additionalProperties": false,
  "required": ["correlation_id", "summary", "next_actions", "confidence"],
  "properties": {
    "correlation_id": { "type": "string" },
    "summary":        { "type": "string", "minLength": 1 },
    "confidence":     { "type": "number", "minimum": 0, "maximum": 1 },
    "next_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["label", "action"],
        "properties": {
          "label":           { "type": "string" },
          "action":          { "type": "string", "enum": ["open_tab", "start_timer", "open_file", "note"] },
          "target_url_hash": { "type": "string" },
          "duration_min":    { "type": "integer", "minimum": 1 }
        }
      }
    }
  }
}